{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "build:browser": "tsdx build --target web --format esm --name index",
    "build:node": "tsdx build --target node --format cjs --name index",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "layer2",
  "author": "onramper-",
  "repository": {
    "type": "git",
    "url": "https://github.com/onramper/layer2"
  },
  "module": "dist/layer2.esm.js",
  "size-limit": [
    {
      "path": "dist/layer2.cjs.production.min.js",
      "limit": "1000 KB"
    },
    {
      "path": "dist/layer2.esm.js",
      "limit": "1000 KB"
    }
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@size-limit/preset-small-lib": "^7.0.5",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@ethersproject/address": "^5.6.0",
    "@ethersproject/providers": "^5.6.2",
    "@ethersproject/units": "^5.5.0",
    "@types/node": "^17.0.13",
    "@usedapp/core": "^0.11.0",
    "@web3-react/injected-connector": "^6.0.7",
    "dotenv": "^16.0.0",
    "events": "^3.3.0"
  }
}
